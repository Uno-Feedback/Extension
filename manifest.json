{
  "name": "uno js",
  "description": "An instrument for recording videos and capturing films to be sent to Jira, Zoho, etc.",
  "offline_enabled": true,
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": "assets/icons/logo-32.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "assets/icons/logo-16.png",
    "48": "assets/icons/logo-48.png",
    "128": "assets/icons/logo-128.png"
  },
  "host_permissions": [
    "*://*/*",
    "<all_urls>",
    "file://*"
  ],
  "permissions": [
    "activeTab",
    "tabCapture",
    "tabs",
    "downloads",
    "storage",
    "identity",
    "downloads.shelf",
    "scripting",
    "nativeMessaging"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*",
        "<all_urls>",
        "file://*"
      ],
      "resources": [
        "html/popup.html",
        "js/popup.js",
        "css/popup.css",

        "js/lib/uno-js/bundle.js",
        "js/lib/uno-js/css/index.css"
      ]
    }
  ]
}
